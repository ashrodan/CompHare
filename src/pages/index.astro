---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---
<Layout
	title="Smart Product Comparison"
	description="Compare products and services quickly with CompHare - your fast and reliable comparison companion">
	<main class="min-h-screen">
		<Navigation />
		<!-- Hero Section -->
		<section class="pt-32 pb-20 px-4 bg-gradient-to-b from-white to-neutral-lighter">
			<div class="max-w-7xl mx-auto text-center">
				<h1 class="text-5xl sm:text-7xl font-bold mb-8 bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent animate-glow-text">
					Lightning Fast
					<span class="block mt-2">Product Comparisons</span>
				</h1>
				<p class="text-lg sm:text-xl text-neutral-light max-w-2xl mx-auto mb-12">
					Hop to the best decision with CompHare. We help you compare products and services with the speed of a hare.
				</p>
				<div class="flex flex-col sm:flex-row justify-center gap-4 sm:gap-6">
					<a href="#compare"
						class="px-8 py-4 bg-primary hover:bg-primary-dark text-white rounded-lg transition-all animate-glow hover:shadow-neon-strong hover:-translate-y-1">
						Start Comparing
					</a>
					<a href="#how-it-works"
						class="px-8 py-4 border-2 border-primary text-primary hover:bg-primary/5 rounded-lg transition-all hover:shadow-neon hover:-translate-y-1">
						How it Works
					</a>
				</div>
			</div>
		</section>
		<!-- Features Preview -->
		<section id="features" class="py-24 bg-neutral-lighter relative overflow-hidden">
			<div class="absolute inset-0 bg-gradient-to-b from-neutral-lighter/50 to-white/30 pointer-events-none"></div>
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
				<div class="text-center mb-16">
					<h2 class="text-4xl sm:text-5xl font-bold text-neutral mb-4">Why Choose CompHare?</h2>
					<p class="text-lg text-neutral-light max-w-2xl mx-auto">Fast, accurate, and easy-to-use comparison tools</p>
				</div>
				<div class="grid md:grid-cols-3 gap-8 sm:gap-12">
					{[
						{
							title: "Lightning Fast",
							description: "Get instant comparisons with our speedy algorithms",
							icon: "âš¡"
						},
						{
							title: "Smart Analysis",
							description: "AI-powered insights to help you make the best choice",
							icon: "ðŸ§ "
						},
						{
							title: "Easy to Use",
							description: "Simple interface designed for effortless comparison",
							icon: "ðŸŽ¯"
						}
					].map(feature => (
						<div class="bg-white/80 backdrop-blur-sm p-8 rounded-xl shadow-lg hover:shadow-neon transition-all duration-300 hover:-translate-y-2">
							<div class="text-5xl mb-6 animate-float">{feature.icon}</div>
							<h3 class="text-2xl font-semibold mb-4 text-neutral">{feature.title}</h3>
							<p class="text-neutral-light text-lg">{feature.description}</p>
						</div>
					))}
				</div>
			</div>
		</section>
		<Footer />
	</main>
</Layout>
